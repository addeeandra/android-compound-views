<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string|reference" />

    <declare-styleable name="GreetingView">
        <attr name="greet_text" format="string|reference" />
        <attr name="greet_name" format="string|reference" />
        <attr name="greet_challenges" format="string|reference" />
        <attr name="greet_background" format="reference" />
    </declare-styleable>
    <declare-styleable name="CustomToolbarView">
        <attr name="title_position" format="flags">
            <flag name="left" value="0" />
            <flag name="center" value="1" />
            <flag name="right" value="2" />
        </attr>
        <attr name="title" />
    </declare-styleable>
    <declare-styleable name="PosterView">
        <attr name="size" format="flags">
            <flag name="fill" value="0" />
            <flag name="landscape" value="1" />
            <flag name="portrait" value="2" />
        </attr>
        <attr name="title" />
        <attr name="src" format="reference" />
        <attr name="subtitle" format="string|reference" />
        <attr name="content" format="string|reference" />
    </declare-styleable>
</resources>